@using NonProfitAccountSystem.Models
@model IEnumerable<tbl_Accounts>
@{
    ViewBag.Title = "Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewBag.Title</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <div class="card-title">@ViewBag.Title</div>
        <div class="row row-cols-lg-auto g-1 align-items-center mt-3">
            <div class="col" aria-action="Add">
                <p>
                    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success" })
                </p>
            </div>
            <div class="col" aria-action="Upload">
                <form name="uploadexcel" action="@Url.Action("UploadExcel")" method="post" enctype="multipart/form-data" class="mb-3">
                    <input type="file" name="file" value="" class="form-control" onchange="$('form').trigger('submit')" />
                </form>
            </div>
        </div>
        <div class="table-responsive">
            <table id="data" class="table table-sm table-light table-hover table-striped" style="font-size:0.9rem;">
                <thead>
                    <tr>
                        <th>Account Details</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <div class="row mb-1">
                                            <label class="col-md-4 col-form-label col-form-label-sm"><b>Account Name</b></label>
                                            <div class="col-md-8">
                                                @Html.DisplayFor(modelItem => item.AccountName)
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <label class="col-md-4 col-form-label col-form-label-sm"><b>Date of Birth</b></label>
                                            <div class="col-md-8">
                                                @Html.FormatValue(item.AccountBday, "{0:MMM dd, yyyy}")
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <label class="col-md-4 col-form-label col-form-label-sm"><b>Address Line</b></label>
                                            <div class="col-md-8">
                                                @Html.DisplayFor(modelItem => item.AddressLine)
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <label class="col-md-4 col-form-label col-form-label-sm"><b>City</b></label>
                                            <div class="col-md-8">
                                                @Html.DisplayFor(modelItem => item.City)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row mb-1">
                                            <label class="col-md-4 col-form-label col-form-label-sm"><b>State</b></label>
                                            <div class="col-md-8">
                                                @Html.DisplayFor(modelItem => item.State)
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <label class="col-md-4 col-form-label col-form-label-sm"><b>Zip/Postal Code</b></label>
                                            <div class="col-md-8">
                                                @Html.DisplayFor(modelItem => item.Zipcode)
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <label class="col-md-4 col-form-label col-form-label-sm"><b>Phone No.</b></label>
                                            <div class="col-md-8">
                                                @Html.DisplayFor(modelItem => item.PhoneHome)
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <label class="col-md-4 col-form-label col-form-label-sm"><b>Language</b></label>
                                            <div class="col-md-8">
                                                @Html.DisplayFor(modelItem => item.Language)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                              
                                
                                <div class="row mb-2">
                                    <div class="col-md-12">
                                        <table class="table">
                                            <tr>
                                                <td><b>Subscriber:</b> <span class="text-decoration-underline">@Html.DisplayFor(modelItem => item.SubscriberName)</span></td>
                                                <td><b>HouseHold Indicator:</b> <span class="text-decoration-underline">@Html.DisplayFor(modelItem => item.HouseHoldIndicator)</span></td>
                                                <td><b>Country Code:</b> <span class="text-decoration-underline">@Html.DisplayFor(modelItem => item.CountryCode)</span></td>
                                                <td><b>NonProfit Staff:</b> <span class="text-decoration-underline">@Html.DisplayFor(modelItem => item.NonProfitStaffName)</span></td>
                                            </tr>
                                            <tr>
                                                <th>Phone Call Attemp 1</th>
                                                <td>@Html.FormatValue(item.CallAttemDateTime1, "{0:MMM dd, yyyy}")</td>
                                                <th>Comment</th>
                                                <td>@Html.DisplayFor(modelItem => item.Comment1)</td>
                                            </tr>
                                            <tr>
                                                <th>Phone Call Attemp 2</th>
                                                <td>@Html.FormatValue(item.CallAttemDateTime2, "{0:MMM dd, yyyy}")</td>
                                                <th>Comment</th>
                                                <td>@Html.DisplayFor(model => item.Comment2)</td>
                                            </tr>
                                            <tr>
                                                <th>Phone Call Attemp 3</th>
                                                <td>@Html.FormatValue(item.CallAttemDateTime3, "{0:MMM dd, yyyy}")</td>
                                                <th>Comment</th>
                                                <td>@Html.DisplayFor(modelItem => item.Comment3)</td>
                                            </tr>
                                            <tr>
                                                <th>Home Visit</th>
                                                <td>@Html.FormatValue(item.HomeVisitAttempDate, "{0:MMM dd, yyyy}")</td>
                                                <th>Comment</th>
                                                <td>@Html.DisplayFor(modelItem => item.HomeVisitComment)</td>
                                            </tr>
                                            <tr>
                                                <th>Reachable</th>
                                                <td>@Html.DisplayFor(modelItem => item.Unreachable)</td>
                                                <th>ACA/Exchange Contact Question</th>
                                                <td>@Html.DisplayFor(modelItem => item.ACA)</td>
                                            </tr>
                                            <tr>
                                                <th>Personal Notes</th>
                                                <td colspan="3">@Html.DisplayFor(modelItem => item.PersonalNotes)</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="filter">
                                    <a class="text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-ellipsis-v"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li aria-action="Edit"><a href="@Url.Action("Edit", new { ID = item.ID })" class="dropdown-item" title="Edit/Modify"><i class="fa fa-edit me-2" style="font-size: 0.8rem;"></i>Edit</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('#data').DataTable({
            ordering: false,
            searching: true
        });

    </script>
}